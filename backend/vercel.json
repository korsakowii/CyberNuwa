{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "vercel_app.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "APP_NAME": "CyberNuwa Backend",
    "DEBUG": "false",
    "ENVIRONMENT": "production",
    "HOST": "0.0.0.0",
    "PORT": "8000",
    "DATABASE_URL": "sqlite:///./cybernuwa.db",
    "SECRET_KEY": "your_secret_key_here",
    "ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXPIRE_MINUTES": "30",
    "LOG_LEVEL": "info",
    "ENABLE_METRICS": "true",
    "ENABLE_HEALTH_CHECK": "true"
  }
}
