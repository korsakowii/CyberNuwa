{
  "name": "CyberNuwa",
  "version": "1.0.0",
  "description": "A modern AI agent training and collaboration platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:clean": "rm -rf .next && next build",
    "build:prod": "NODE_ENV=production next build",
    "start:prod": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "build:static": "cp next.config.static.js next.config.js && cp app/page.static.tsx app/page.tsx && next build && git checkout app/page.tsx && git checkout next.config.js",
    "export": "cp next.config.static.js next.config.js && cp app/page.static.tsx app/page.tsx && next build && git checkout app/page.tsx && git checkout next.config.js",
    "preview:static": "npm run build:static && npx serve out/ -p 3001",
    "deploy:prod": "./scripts/deploy-production.sh",
    "quality": "npm run lint && npm run type-check && npm run test:coverage",
    "quality:fix": "npm run lint:fix && npm run format"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "framer-motion": "^10.18.0",
    "next": "^14.2.30",
    "next-intl": "^4.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "^2.9.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "24.1.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.15",
    "babel-jest": "^30.0.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.30",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.24",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
